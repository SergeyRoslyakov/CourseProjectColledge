<Window x:Class="QualityAppWPF.Views.ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сканирование штрих-кода" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="📷 Сканирование продукта" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Основной контент -->
        <Border Grid.Row="1" 
                BorderBrush="#2196F3" 
                BorderThickness="2"
                CornerRadius="10"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Введите штрих-код вручную:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <TextBox x:Name="txtBarcode" 
                         FontSize="18" 
                         Height="40"
                         Margin="0,0,0,20"
                         TextChanged="TxtBarcode_TextChanged"/>

                <TextBlock Text="ИЛИ выберите тестовый продукт:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <ComboBox x:Name="cmbTestProducts" 
                          Height="35" 
                          FontSize="14"
                          SelectionChanged="CmbTestProducts_SelectionChanged">
                    <ComboBoxItem>4601234567890 - Молоко 3.2%</ComboBoxItem>
                    <ComboBoxItem>4601234567891 - Хлеб Бородинский</ComboBoxItem>
                    <ComboBoxItem>4601234567892 - Сок Яблочный</ComboBoxItem>
                    <ComboBoxItem>4601234567893 - Сыр Российский</ComboBoxItem>
                </ComboBox>

                <!-- Результат сканирования -->
                <Border x:Name="borderResult" 
                        Visibility="Collapsed"
                        Background="#E8F5E9" 
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✅ " FontSize="20"/>
                            <TextBlock Text="Продукт найден!" 
                                       FontSize="16" 
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtProductName" FontWeight="Bold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Категория:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCategory"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Производитель:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtManufacturer"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Штрих-код:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtFoundBarcode"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Продукт не найден -->
                <Border x:Name="borderNotFound" 
                        Visibility="Collapsed"
                        Background="#FFEBEE" 
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="❌ " FontSize="20"/>
                            <TextBlock Text="Продукт не найден" 
                                       FontSize="16" 
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <TextBlock Text="Хотите добавить новый продукт?" 
                                   Margin="0,0,0,10"/>

                        <Button Content="➕ Добавить новый продукт" 
                                Height="35"
                                Click="BtnAddNewProduct_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="❌ Отмена" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="BtnCancel_Click"/>

            <Button x:Name="btnProceed" 
                    Content="➡ Перейти к проверке" 
                    Width="150" 
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"
                    IsEnabled="False"
                    Click="BtnProceed_Click"/>
        </StackPanel>
    </Grid>
</Window>