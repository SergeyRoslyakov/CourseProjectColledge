<!-- Views/LoginWindow.xaml -->
<Window x:Class="QualityAppWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Quality App" 
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="10"
                Margin="30"
                Padding="30">
            <StackPanel>
                <TextBlock Text="🔐 Вход в систему" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Имя пользователя:" 
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                         Height="35" 
                         FontSize="14"
                         Padding="5"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Пароль:" 
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             Height="35" 
                             FontSize="14"
                             Padding="5"
                             Margin="0,0,0,20"/>

                <CheckBox x:Name="chkRemember" 
                          Content="Запомнить меня"
                          Margin="0,0,0,25"/>

                <Button x:Name="btnLogin" 
                        Content="Войти" 
                        Height="40"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="BtnLogin_Click"/>
            </StackPanel>
        </Border>

        <!-- Информационная панель -->
        <Border Grid.Row="1" 
                Background="#E3F2FD" 
                Padding="10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Тестовые пользователи: " 
                           FontWeight="Bold"/>
                <TextBlock Text="user/user123 (Пользователь), " 
                           Margin="5,0,0,0"/>
                <TextBlock Text="admin/admin123 (Администратор)"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>