<Window x:Class="QualityAppWPF.Views.AddParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить параметр проверки" 
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="➕ Добавить параметр проверки" 
                   FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="#2196F3" BorderThickness="1" Padding="15">
            <StackPanel>
                <TextBlock Text="Параметр:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbParameters" 
                          DisplayMemberPath="Name"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Значение:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtValue" Margin="0,0,0,10"/>

                <TextBlock Text="Примечания:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNotes" 
                         Height="60" 
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Margin="0,0,0,15"/>

                <CheckBox x:Name="chkIsPassed" 
                          Content="Параметр пройден"
                          IsChecked="True"
                          Margin="0,0,0,10"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="❌ Отмена" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="✅ Добавить" Width="80" Background="#2196F3" 
                    Foreground="White" Click="BtnAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>