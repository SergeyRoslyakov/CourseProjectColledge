<Window x:Class="QualityAppWPF.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить новый продукт" 
        Height="500" Width="450"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="➕ Добавить новый продукт" 
                   FontSize="18" FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <Border Grid.Row="1" BorderBrush="#4CAF50" BorderThickness="1" Padding="15">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Штрих-код:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtBarcode" Margin="0,0,0,10"/>

                    <TextBlock Text="Название продукта:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtName" Margin="0,0,0,10"/>

                    <TextBlock Text="Категория:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbCategory" Margin="0,0,0,10">
                        <ComboBoxItem>Молочные продукты</ComboBoxItem>
                        <ComboBoxItem>Мясные продукты</ComboBoxItem>
                        <ComboBoxItem>Хлебобулочные изделия</ComboBoxItem>
                        <ComboBoxItem>Овощи и фрукты</ComboBoxItem>
                        <ComboBoxItem>Напитки</ComboBoxItem>
                        <ComboBoxItem>Бакалея</ComboBoxItem>
                        <ComboBoxItem>Кондитерские изделия</ComboBoxItem>
                        <ComboBoxItem>Другое</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Text="Производитель:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtManufacturer" Margin="0,0,0,15"/>

                    <!-- Раздел для БЖУ -->
                    <Border BorderBrush="#FF9800" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📊 Пищевая ценность (не обязательно)" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Белки -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                                    <TextBlock Text="Белки (г)" FontSize="11"/>
                                    <TextBox x:Name="txtProtein" 
                                             Height="25"
                                             ToolTip="Граммы белка на 100г"/>
                                </StackPanel>

                                <!-- Жиры -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                                    <TextBlock Text="Жиры (г)" FontSize="11"/>
                                    <TextBox x:Name="txtFat" 
                                             Height="25"
                                             ToolTip="Граммы жиров на 100г"/>
                                </StackPanel>

                                <!-- Углеводы -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="5">
                                    <TextBlock Text="Углеводы (г)" FontSize="11"/>
                                    <TextBox x:Name="txtCarbs" 
                                             Height="25"
                                             ToolTip="Граммы углеводов на 100г"/>
                                </StackPanel>

                                <!-- Калории -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                            Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Text="Калории (ккал)" FontSize="11"/>
                                    <TextBox x:Name="txtCalories" 
                                             Width="100"
                                             Height="25"
                                             HorizontalAlignment="Center"
                                             ToolTip="Калорий на 100г"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Изображение продукта (только для админа) -->
                    <TextBlock Text="Изображение продукта:" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnSelectImage" 
                                Content="📁 Выбрать изображение" 
                                Width="150" 
                                Height="30"
                                Margin="0,0,10,0"
                                Click="BtnSelectImage_Click"/>
                        <TextBlock x:Name="txtImageName" 
                                   VerticalAlignment="Center"
                                   Foreground="Gray"/>
                    </StackPanel>
                    <TextBlock Text="* Изображение сохраняется как [штрих-код].jpg" 
                               FontSize="10" 
                               Foreground="Gray"
                               Margin="0,5,0,15"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="❌ Отмена" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="✅ Сохранить" Width="80" Background="#4CAF50" 
                    Foreground="White" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>