<Window x:Class="QualityAppWPF.Views.ProductsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список всех продуктов" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель - список продуктов -->
        <Border Grid.Column="0" Background="#F5F5F5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Панель поиска -->
                <Border Grid.Row="0" Background="#E3F2FD" Padding="10">
                    <StackPanel>
                        <TextBlock Text="🔍 Поиск продукта:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSearch" 
                                 Height="30"
                                 TextChanged="TxtSearch_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Список продуктов -->
                <ListBox x:Name="lbProducts" 
                         Grid.Row="1"
                         SelectionChanged="LbProducts_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    Margin="5" 
                                    Padding="10"
                                    CornerRadius="5"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Barcode}" 
                                               Foreground="Gray"
                                               FontSize="11"/>
                                    <TextBlock Text="{Binding Category}" 
                                               Foreground="#4CAF50"
                                               FontSize="11"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Правая панель - информация о продукте -->
        <Border Grid.Column="1" Padding="20">
            <Grid>
                <!-- Панель с информацией о продукте -->
                <ScrollViewer x:Name="scrollProductInfo" 
                              Visibility="Collapsed">
                    <StackPanel>
                        <!-- Картинка продукта -->
                        <Border BorderBrush="#4CAF50" 
                                BorderThickness="2" 
                                CornerRadius="10"
                                Margin="0,0,0,20"
                                Width="300" 
                                Height="300"
                                HorizontalAlignment="Center">
                            <Image x:Name="imgProduct" 
                                   Stretch="Uniform"/>
                        </Border>

                        <!-- Базовая информация -->
                        <TextBlock x:Name="txtProductName" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Штрих-код:" 
                                       FontWeight="Bold"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       x:Name="txtBarcode"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Категория:" 
                                       FontWeight="Bold"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       x:Name="txtCategory"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Производитель:" 
                                       FontWeight="Bold"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       x:Name="txtManufacturer"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Дата добавления:" 
                                       FontWeight="Bold"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                       x:Name="txtCreatedAt"/>
                        </Grid>

                        <!-- Разделитель -->
                        <Separator Margin="0,0,0,20"/>

                        <!-- БЖУ информация -->
                        <Border BorderBrush="#FF9800" 
                                BorderThickness="1" 
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="📊 Пищевая ценность" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Белки" FontSize="12"/>
                                        <TextBlock x:Name="txtProtein" 
                                                   Text="-" 
                                                   FontSize="20" 
                                                   FontWeight="Bold"
                                                   Foreground="#4CAF50"/>
                                        <TextBlock Text="г/100г" FontSize="10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Жиры" FontSize="12"/>
                                        <TextBlock x:Name="txtFat" 
                                                   Text="-" 
                                                   FontSize="20" 
                                                   FontWeight="Bold"
                                                   Foreground="#FF9800"/>
                                        <TextBlock Text="г/100г" FontSize="10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Углеводы" FontSize="12"/>
                                        <TextBlock x:Name="txtCarbs" 
                                                   Text="-" 
                                                   FontSize="20" 
                                                   FontWeight="Bold"
                                                   Foreground="#2196F3"/>
                                        <TextBlock Text="г/100г" FontSize="10"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock x:Name="txtCalories" 
                                           Text="Калории: -" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- История проверок этого продукта -->
                        <Button x:Name="btnShowChecks" 
                                Content="📋 Показать историю проверок" 
                                Width="250" 
                                Height="35"
                                HorizontalAlignment="Center"
                                Click="BtnShowChecks_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Сообщение при отсутствии выбора -->
                <TextBlock x:Name="txtNoSelection" 
                           Text="Выберите продукт из списка слева" 
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Gray"/>
            </Grid>
        </Border>
    </Grid>
</Window>