<Window x:Class="QualityAppWPF.Views.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#673AB7" Padding="15">
            <StackPanel>
                <TextBlock Text="⚙️ Панель администратора" 
                           FontSize="20" 
                           Foreground="White" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="txtAdminInfo" 
                           Foreground="#E1D5F5"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Вкладки -->
        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <!-- Вкладка 1: Продукты -->
            <TabItem Header="📦 Продукты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления продуктами -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="➕ Добавить продукт" 
                                Width="150" 
                                Height="35"
                                Click="BtnAddProduct_Click"/>
                        <Button Content="🗑️ Удалить продукт" 
                                Width="150" 
                                Height="35"
                                Margin="10,0,0,0"
                                Background="#F44336"
                                Foreground="White"
                                Click="BtnDeleteProduct_Click"/>
                    </StackPanel>

                    <!-- Список продуктов -->
                    <DataGrid x:Name="dgProducts" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Штрих-код" 
                                                Binding="{Binding Barcode}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding Name}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Категория" 
                                                Binding="{Binding Category}"/>
                            <DataGridTextColumn Header="Производитель" 
                                                Binding="{Binding Manufacturer}"/>
                            <DataGridTextColumn Header="Дата добавления" 
                                                Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 2: Пользователи -->
            <TabItem Header="👥 Пользователи">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления пользователями -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="➕ Добавить пользователя" 
                                Width="180" 
                                Height="35"
                                Click="BtnAddUser_Click"/>
                    </StackPanel>

                    <!-- Список пользователей -->
                    <DataGrid x:Name="dgUsers" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Логин" 
                                                Binding="{Binding Username}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="ФИО" 
                                                Binding="{Binding FullName}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Роль" 
                                                Binding="{Binding Role}"/>
                            <DataGridCheckBoxColumn Header="Активен" 
                                                    Binding="{Binding IsActive}"/>
                            <DataGridTextColumn Header="Дата регистрации" 
                                                Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 3: Производители -->
            <TabItem Header="🏭 Производители">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="➕ Добавить производителя" 
                                Width="180" 
                                Height="35"
                                Click="BtnAddManufacturer_Click"/>
                    </StackPanel>

                    <!-- Список производителей -->
                    <DataGrid x:Name="dgManufacturers" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding Id}" 
                                                Width="50"/>
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding Name}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Контактное лицо" 
                                                Binding="{Binding ContactPerson}" 
                                                Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 4: Категории -->
            <TabItem Header="🗂️ Категории">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="➕ Добавить категорию" 
                                Width="180" 
                                Height="35"
                                Click="BtnAddCategory_Click"/>
                    </StackPanel>

                    <!-- Список категорий -->
                    <DataGrid x:Name="dgCategories" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding Id}" 
                                                Width="50"/>
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding Name}" 
                                                Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 5: Параметры -->
            <TabItem Header="📏 Параметры контроля">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="➕ Добавить параметр" 
                                Width="180" 
                                Height="35"
                                Click="BtnAddParameter_Click"/>
                    </StackPanel>

                    <!-- Список параметров -->
                    <DataGrid x:Name="dgParameters" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding Id}" 
                                                Width="50"/>
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding Name}" 
                                                Width="150"/>
                            <DataGridTextColumn Header="Описание" 
                                                Binding="{Binding Description}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Единица измерения" 
                                                Binding="{Binding Unit}" 
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 6: Статистика -->
            <TabItem Header="📊 Статистика">
                <Grid Margin="10">
                    <StackPanel>
                        <Border BorderBrush="#4CAF50" 
                                BorderThickness="1" 
                                CornerRadius="5"
                                Padding="20"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="📈 Статистика системы" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                                        <TextBlock Text="Всего продуктов:" FontSize="14"/>
                                        <TextBlock x:Name="txtTotalProducts" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#2196F3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                                        <TextBlock Text="Проверок сегодня:" FontSize="14"/>
                                        <TextBlock x:Name="txtChecksToday" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#4CAF50"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                                        <TextBlock Text="Активных пользователей:" FontSize="14"/>
                                        <TextBlock x:Name="txtActiveUsers" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#FF9800"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                                        <TextBlock Text="Средний рейтинг:" FontSize="14"/>
                                        <TextBlock x:Name="txtAvgRating" 
                                                   Text="0.0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#9C27B0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                                        <TextBlock Text="Последняя активность:" FontSize="14"/>
                                        <TextBlock x:Name="txtLastActivity" 
                                                   Text="Нет данных" 
                                                   FontSize="16"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Button Content="🔄 Обновить статистику" 
                                Width="200" 
                                Height="35"
                                HorizontalAlignment="Center"
                                Click="BtnRefreshStats_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="📋 Экспорт данных" 
                    Width="130" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="BtnExportData_Click"/>
            <Button Content="🔄 Обновить всё" 
                    Width="120" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    Click="BtnRefreshAll_Click"/>
            <Button Content="❌ Закрыть" 
                    Width="100" 
                    Height="35"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>