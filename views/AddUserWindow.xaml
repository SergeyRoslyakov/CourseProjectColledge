<!-- Views/AddUserWindow.xaml -->
<Window x:Class="QualityAppWPF.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" 
        Height="450" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="👥 Добавить нового пользователя" 
                   FontSize="18" FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <Border Grid.Row="1" BorderBrush="#673AB7" BorderThickness="1" Padding="15">
            <StackPanel>
                <TextBlock Text="Логин:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>

                <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>

                <TextBlock Text="Подтверждение пароля:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,10"/>

                <TextBlock Text="ФИО:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFullName" Margin="0,0,0,10"/>

                <TextBlock Text="Роль:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" Margin="0,0,0,10">
                    <ComboBoxItem>User</ComboBoxItem>
                    <ComboBoxItem>Admin</ComboBoxItem>
                </ComboBox>

                <CheckBox x:Name="chkIsActive" 
                          Content="Активный пользователь"
                          IsChecked="True"
                          Margin="0,0,0,15"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="❌ Отмена" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="✅ Сохранить" Width="80" Background="#673AB7" 
                    Foreground="White" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>